  <script src="js/scrolling-nav.js"></script>
	<script src="fonts/fontawesome/js/all.min.js"></script>
	<script type="text/javascript" src="js/jquery.cookiebar.js"></script>
	<script type="text/javascript" src="js/js.cookie.js"></script>
	
	<script type="text/javascript">
		$(document).ready(function(){
			/*$.cookieBar({
				expireDays: 2,
				forceShow: false,
				message: "Diese Website benutzen Cookies. Wenn Sie die Website weiter nutzen, stimmen Sie der Verwendung von Cookies zu.",
				acceptText: "Zustimmen"
			});*/
			
			$('form').submit(function(e){
				e.preventDefault();
				
				$.post('../contact.php',{ name: $('#name').val(), email: $('#email').val(), subject: $('#subject').val(), message: $('#message').val() }, function(data){
					$('form').slideUp("fast", function() {
						
						$(this).before('<div class="alert alert-success" role="alert"><strong>Danke!</strong> Deine Nachricht wurde abgeschickt!</div>');
						$('#name').val('');
						$('#email').val('');
						$('#subject').val('');
						$('#message').val('');
					});
				});
				
			});
			
			$('#donation-value').click(function(e){
				var value = $('#donation-value').val();
				var link = "https://www.paypal.me/assemblersim/" + value;
				$('#donation-submit').attr('href', link);
			});
		});
	</script>
